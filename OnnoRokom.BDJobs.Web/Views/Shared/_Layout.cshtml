<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("OnnoRokom.BDJobs.com", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("View Jobs", "Index", "JobPost")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            <div class="col-md-3 left-side-bar">
                <div class="row">
                    <h4>User Panel</h4>
                </div>
                @if (Request.IsAuthenticated)
                {
                    <div class="row">
                        <a href="/jobPost/ViewAppliedJobs" class="btn btn-primary">Applied Jobs</a>
                    </div>

                    <div class="row">
                        <a href="/JobPost/InterviewNotification" class="btn btn-primary">Notifications</a>
                    </div>

                    if (this.User.IsInRole("Employer"))
                    {
                        <div class="row">
                            <a href="/jobPost/ViewAppliedCandidates" class="btn btn-primary">My Job Posts</a>
                        </div>
                    }

                    if (this.User.IsInRole("Admin"))
                    {
                        <div class="row">
                            <a href="/Admin/Dashboard/Index" class="btn btn-primary">Admin Dashboard</a>
                        </div>
                    }
                }
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - OnnoRokom.BDJobs.com</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
