@model List<OnnoRokom.BDJobs.Web.Models.JobModels.JobPostViewModel>

@{
    ViewBag.Title = "Applied Jobs";
}

<style>
    .singlePost {
        width: 100%;
        padding: 3px 20px;
        background-color: beige;
        margin: 10px;
        border-radius: 5px;
    }

    .author-info h3 {
        margin: 0;
    }
</style>

<h2>My Applied Jobs</h2>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        @foreach (var post in Model)
        {
            <div class="singlePost">
                <div class="row">
                    <div class="col author-info">
                        <h3>@post.EmployerName</h3>
                        <p>@post.CreationDate</p>
                        <h3>@post.Title</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col post-description">
                        <p>@post.Description</p>
                    </div>
                </div>
                <div class="row">
                    <a href="/JobPost/ViewDetails?jobId=@post.JobId" class="btn btn-primary">View Details</a>
                </div>
            </div>
        }
    </div>
</div>

