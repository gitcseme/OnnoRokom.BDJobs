@model List<OnnoRokom.BDJobs.Web.Models.JobModels.InterviewNotificationViewModel>

@{
    ViewBag.Title = "Notifications";
}

<style>
    .singleNotification {
        padding: 18px;
        margin: 5px;
        background-color: aliceblue;
        border-radius: 5px;
    }
</style>

<h2>Interview Notifications</h2>

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        @if (Model.Count() == 0)
        {
            <div style="background-color: blueviolet">
                <h4>No interview is scheduled till now</h4>
            </div>
        }

        @foreach (var notification in Model)
        {
            <div class="singleNotification">
                <div class="row">
                    <div class="col author-info">
                        <h3 style="color: black; margin: 0">@notification.EmployerName</h3>
                        <h3>Looking for: <span style="color: blue">@notification.JobTitle</span> </h3>
                        <p>@Html.Raw(@notification.Description)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col interview-schedule">
                        <p style="color: green; font-size: 20px;">Dear applicant, we set an interview for you</p>
                        <p>Interview Schedule: <span style="color: coral; font-weight: 800">@notification.InterviewTime</span> </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

