@model OnnoRokom.BDJobs.Web.Models.JobModels.JobPostIndexModel

@{
    ViewBag.Title = "Job-Posts";
}

<style>
    .singlePost {
        width: 100%;
        padding: 3px 20px;
        background-color: beige;
        margin: 10px;
        border-radius: 5px;
    }

    .author-info h3 {
        margin: 0;
    }

</style>

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        @foreach (var post in Model.JobPosts)
        {
            <div class="singlePost">
                <div class="row">
                    <div class="col author-info">
                        <h3>@post.EmployerName</h3>
                        <p>@post.CreationDate</p>
                        <h4>Looking for: <span style="color: blue">@post.Title</span> </h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col post-description">
                        <p>@post.Description</p>
                    </div>
                </div>
                <div class="row">
                    <a href="/JobPost/ViewDetails?jobId=@post.JobId" class="btn btn-primary">View Details</a>
                </div>
            </div>
        }
    </div>
</div>

